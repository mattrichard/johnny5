<?xml version="1.0"?>

<robot name="johnny5_hardware"
       xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="johnny5_arm_shoulder_roll_transmission" params="prefix">
    <transmission type="pr2_mechanism_model/SimpleTransmission" name="${prefix}_arm_shoulder_roll_trans">
      <actuator name="${prefix}_arm_shoulder_roll_motor" />
      <joint name="${prefix}_arm_shoulder_roll_joint" />
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>
  </xacro:macro>

