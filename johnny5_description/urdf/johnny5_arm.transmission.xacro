      <actuator name="${prefix}_arm_fingers_base_motor" />
      <joint name="${prefix}_arm_fingers_base_joint" />
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>
  </xacro:macro>

</robot>
